<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sharon.blog.mapper.CommentMapper">
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        insert into comment(blog_id,nickname,content,created_at)
        values (#{blogId},#{nickname},#{content},#{createAt});
    </insert>
<select id="findById" resultType="com.sharon.blog.pojo.Comment">
select * from comment where blog_id=#{blogId}
                      order by created_at desc;
 </select>
    <delete id="deleteById" >
        delete from comment where id = #{id}
    </delete>
    <select id="countByBlogId" resultType="int">
        select count(*) from comment where blog_id=#{blogId};
    </select>

</mapper>    